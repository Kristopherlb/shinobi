{
  "extends": "nx/presets/npm.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/coverage/**"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "production"
      ],
      "cache": true
    },
    "test": {
      "inputs": [
        "default"
      ],
      "cache": true
    },
    "typecheck": {
      "inputs": [
        "production"
      ],
      "cache": true
    }
  }
}
