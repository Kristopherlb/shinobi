{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@shinobi/core/*": [
        "packages/core/src/index.ts"
      ],
      "@shinobi/standards-otel/*": [
        "packages/standards/otel/src"
      ],
      "@shinobi/standards-logging/*": [
        "packages/standards/logging/src/*"
      ],
      "@platform/components/*": [
        "packages/components/*/src"
      ],
      "@platform/constructs/*": [
        "packages/constructs/*/src"
      ],
      "@platform/contracts/*": [
        "packages/platform/contracts/*"
      ],
      "@cdk-lib/*": [
        "packages/constructs/*/src"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "packages/core/_temp-problematic-files/**",
    "packages/core/_temp-problematic-platform/**"
  ]
}