{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@shinobi/*": [
        "packages/*/src",
        "packages/components/*/src",
        "packages/standards/*/src"
      ],
      "@platform/*": [
        "packages/*/src",
        "packages/components/*/src",
        "packages/standards/*/src"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}