{
  "name": "{{componentName}}",
  "sourceRoot": "packages/components/{{componentName}}/src",
  "projectType": "library",
  "tags": [
    "type:lib",
    "scope:components",
    "scope:{{componentName}}"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/components/{{componentName}}",
        "tsConfig": "packages/components/{{componentName}}/tsconfig.json",
        "main": "packages/components/{{componentName}}/index.ts"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/components/{{componentName}}/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/components/{{componentName}}/**/*.ts"
        ]
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/components/{{componentName}}/tsconfig.json",
        "noEmit": true
      }
    }
  }
}