{
  "name": "workspace",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "svc": "./bin/svc"
  },
  "scripts": {
    "svc": "node bin/svc",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:deps": "node ./scripts/check-dependencies.mjs",
    "audit:platform": "npm run check:deps && node ./scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format pretty",
    "audit:platform:strict": "npm run check:deps && node ./scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format pretty --strict",
    "audit:platform:json": "npm run check:deps && node ./scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format json",
    "audit:gov": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml --format pretty",
    "audit:test": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-testing.yaml --format pretty",
    "audit:otel": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-observability.yaml --format pretty",
    "audit:all": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format pretty",
    "audit:all:strict": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format pretty --strict",
    "audit:all:json": "node ./scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format json",
    "dagger:test": "cd dagger && npm test",
    "dagger:test:watch": "cd dagger && npm run test:watch",
    "dagger:pipeline:dev": "cd dagger && npm run pipeline:dev",
    "dagger:pipeline:staging": "cd dagger && npm run pipeline:staging",
    "dagger:pipeline:prod": "cd dagger && npm run pipeline:prod",
    "dagger:ci:setup": "cd dagger && npm run ci:setup",
    "setup:mcp": "./setup-shinobi-mcp.sh",
    "mcp:build": "cd packages/components/shinobi/mcp-server && npm install && npm run build",
    "mcp:start": "cd packages/components/shinobi/mcp-server && node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "aws-cdk-lib": "^2.214.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "constructs": "^10.4.2",
    "glob": "^11.0.3",
    "inquirer": "^12.9.4",
    "jest": "^30.1.3",
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0",
    "ts-jest": "^29.4.1",
    "ts-morph": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "fast-glob": "^3.3.3",
    "yaml": "^2.8.1"
  }
}