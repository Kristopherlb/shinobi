{
  "name": "workspace",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "svc": "./bin/svc"
  },
  "scripts": {
    "build": "nx run-many -t build --all",
    "test": "nx run-many -t test --all",
    "lint": "nx run-many -t lint --all",
    "typecheck": "nx run-many -t typecheck --all",
    "graph": "nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "affected:typecheck": "nx affected -t typecheck",
    "svc": "pnpm --filter @shinobi/svc start",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:deps": "node ./tools/scripts/check-dependencies.mjs",
    "audit:platform": "pnpm run check:deps && node ./tools/scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format pretty",
    "audit:platform:strict": "pnpm run check:deps && node ./tools/scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format pretty --strict",
    "audit:platform:json": "pnpm run check:deps && node ./tools/scripts/audit-platform.mjs .cursor/audit/platform-governance.yaml --base origin/main --format json",
    "audit:gov": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml --format pretty",
    "audit:test": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-testing.yaml --format pretty",
    "audit:otel": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-observability.yaml --format pretty",
    "audit:all": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format pretty",
    "audit:all:strict": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format pretty --strict",
    "audit:all:json": "node ./tools/scripts/audit-suite.mjs --rules .cursor/audit/platform-governance.yaml,.cursor/audit/platform-testing.yaml,.cursor/audit/platform-observability.yaml --base origin/main --format json",
    "dagger:test": "cd dagger && npm test",
    "dagger:test:watch": "cd dagger && npm run test:watch",
    "dagger:pipeline:dev": "cd dagger && npm run pipeline:dev",
    "dagger:pipeline:staging": "cd dagger && npm run pipeline:staging",
    "dagger:pipeline:prod": "cd dagger && npm run pipeline:prod",
    "dagger:ci:setup": "cd dagger && npm run ci:setup",
    "setup:mcp": "./tools/scripts/setup-shinobi-mcp.sh",
    "mcp:build": "pnpm --filter @shinobi/mcp-server build",
    "mcp:start": "pnpm --filter @shinobi/mcp-server start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.637.0",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "aws-cdk-lib": "^2.214.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "constructs": "^10.4.2",
    "glob": "^11.0.3",
    "inquirer": "^12.9.4",
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0",
    "ts-morph": "^27.0.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@nx/eslint": "^21.5.2",
    "@nx/jest": "^21.5.2",
    "@nx/js": "^21.5.2",
    "@nx/node": "^21.5.2",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "eslint": "^8.0.0",
    "fast-glob": "^3.3.3",
    "jest": "^30.1.3",
    "nx": "^21.5.2",
    "ts-node": "^10.9.2",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.16.1"
}