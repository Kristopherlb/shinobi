{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Backstage Portal Component Configuration",
  "description": "Configuration schema for the Backstage Portal component",
  "properties": {
    "serviceName": {
      "type": "string",
      "description": "Name of the service this portal belongs to",
      "minLength": 1,
      "maxLength": 63
    },
    "environment": {
      "type": "string",
      "description": "Environment name (dev, staging, prod)",
      "enum": [
        "dev",
        "staging",
        "prod"
      ]
    },
    "complianceFramework": {
      "type": "string",
      "description": "Compliance framework to apply",
      "enum": [
        "commercial",
        "fedramp-moderate",
        "fedramp-high"
      ],
      "default": "commercial"
    },
    "domain": {
      "type": "string",
      "description": "Domain name for the portal",
      "format": "uri",
      "pattern": "^https?://"
    },
    "enableAuthentication": {
      "type": "boolean",
      "description": "Enable authentication for the portal",
      "default": true
    },
    "enableCatalog": {
      "type": "boolean",
      "description": "Enable service catalog functionality",
      "default": true
    },
    "enableTechDocs": {
      "type": "boolean",
      "description": "Enable technical documentation",
      "default": true
    },
    "enableScaffolder": {
      "type": "boolean",
      "description": "Enable software templating",
      "default": true
    },
    "observability": {
      "type": "object",
      "description": "Observability configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info"
        }
      },
      "required": [
        "enabled"
      ]
    },
    "tags": {
      "type": "object",
      "description": "Resource tags",
      "patternProperties": {
        "^[a-zA-Z0-9\\-_.:/=+@]+$": {
          "type": "string",
          "maxLength": 256
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "serviceName",
    "environment",
    "domain"
  ],
  "additionalProperties": false
}