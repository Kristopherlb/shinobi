{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "../../../dist/packages/components/lambda-api",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shinobi/core": [
        "../../../packages/core/src/index.ts"
      ],
      "@shinobi/core/*": [
        "../../../packages/core/src/*"
      ],
      "@platform/contracts": [
        "../../../packages/contracts/src/index.ts"
      ],
      "@platform/contracts/*": [
        "../../../packages/contracts/src/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}