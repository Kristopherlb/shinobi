{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shinobi/core": [
        "../../../packages/core/src/index.ts"
      ],
      "@shinobi/core/*": [
        "../../../packages/core/src/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "*.component.ts",
    "*.builder.ts",
    "*.creator.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}