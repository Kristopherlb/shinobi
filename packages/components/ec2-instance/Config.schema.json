{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "EC2 Instance Component Configuration",
  "description": "Configuration schema for the EC2 Instance component",
  "properties": {
    "serviceName": {
      "type": "string",
      "description": "Name of the service this component belongs to",
      "minLength": 1,
      "maxLength": 63
    },
    "environment": {
      "type": "string",
      "description": "Environment name (dev, staging, prod)",
      "enum": [
        "dev",
        "staging",
        "prod"
      ]
    },
    "complianceFramework": {
      "type": "string",
      "description": "Compliance framework to apply",
      "enum": [
        "commercial",
        "fedramp-moderate",
        "fedramp-high"
      ],
      "default": "commercial"
    },
    "instanceType": {
      "type": "string",
      "description": "EC2 instance type",
      "default": "t3.micro"
    },
    "amiId": {
      "type": "string",
      "description": "AMI ID to use for the instance"
    },
    "keyName": {
      "type": "string",
      "description": "EC2 Key Pair name for SSH access"
    },
    "securityGroups": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Security group IDs to attach"
    },
    "userData": {
      "type": "string",
      "description": "User data script to run on instance startup"
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "detailedMonitoring": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "tags": {
      "type": "object",
      "description": "Resource tags",
      "patternProperties": {
        "^[a-zA-Z0-9\\-_.:/=+@]+$": {
          "type": "string",
          "maxLength": 256
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "serviceName",
    "environment"
  ],
  "additionalProperties": false
}