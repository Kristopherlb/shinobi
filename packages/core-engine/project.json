{
  "name": "@platform/core-engine",
  "sourceRoot": "packages/core-engine/src",
  "projectType": "library",
  "tags": [
    "type:lib",
    "scope:core"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/core-engine",
        "tsConfig": "packages/core-engine/tsconfig.json",
        "main": "packages/core-engine/src/index.ts"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/core-engine/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/core-engine/src/**/*.ts"
        ]
      }
    },
    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/core-engine/tsconfig.json",
        "noEmit": true
      }
    }
  }
}