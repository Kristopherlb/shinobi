{
  "name": "core",
  "root": "packages/core",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p packages/core/tsconfig.json"
      },
      "inputs": [
        "default",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/src/**"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --ext .ts,.tsx"
      }
    }
  },
  "tags": [
    "type:lib",
    "scope:core"
  ]
}
