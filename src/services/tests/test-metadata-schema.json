{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Metadata Schema",
  "description": "Schema for test metadata following Platform Testing Standard v1.0",
  "type": "object",
  "required": [
    "id",
    "level",
    "capability",
    "oracle",
    "invariants",
    "fixtures",
    "inputs",
    "risks",
    "dependencies",
    "evidence",
    "compliance_refs",
    "ai_generated",
    "human_reviewed_by"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique test identifier following TP-<service>-<feature>-<NNN> format",
      "pattern": "^TP-[a-z0-9-]+-[a-z0-9-]+-[0-9]{3}$"
    },
    "level": {
      "type": "string",
      "description": "Test level",
      "enum": [
        "unit",
        "integration",
        "e2e"
      ]
    },
    "capability": {
      "type": "string",
      "description": "Short behavior description of what the test validates"
    },
    "oracle": {
      "type": "string",
      "description": "Oracle type used for validation",
      "enum": [
        "exact",
        "snapshot",
        "property",
        "contract",
        "metamorphic",
        "trace"
      ]
    },
    "invariants": {
      "type": "array",
      "description": "List of invariants that must always hold",
      "items": {
        "type": "string"
      }
    },
    "fixtures": {
      "type": "array",
      "description": "List of fixtures used in the test",
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "object",
      "description": "Input shape and notes",
      "required": [
        "shape",
        "notes"
      ],
      "properties": {
        "shape": {
          "type": "string",
          "description": "Domain summary of input shape"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about inputs"
        }
      }
    },
    "risks": {
      "type": "array",
      "description": "List of risks associated with the test",
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "List of dependencies for the test",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "description": "List of evidence URIs",
      "items": {
        "type": "string"
      }
    },
    "compliance_refs": {
      "type": "array",
      "description": "List of compliance references",
      "items": {
        "type": "string"
      }
    },
    "ai_generated": {
      "type": "boolean",
      "description": "Whether the test was generated by AI"
    },
    "human_reviewed_by": {
      "type": "string",
      "description": "Name or group of human reviewer (required if ai_generated is true)"
    }
  },
  "additionalProperties": false
}